---
  import projects from "../services/projects.json"
---

<section class="text-gray-300">
  <h2 class="text-lg md:text-2xl font-bold mb-3">Projects</h2>
  <div class="grid md:grid-cols-2 gap-4">
    {
      projects.map(p => {
        return(
          <div class="border border-gray-800 p-4 rounded-md transition-all duration-150  hover:bg-gray-900/50 hover:shadow-lg">
            <div class="flex flex-row justify-between items-center mb-2">
              <a href={p.url} target="_blank"><h3 class="text-white font-medium transition-all duration-150 hover:text-gray-400">{p.title}</h3></a>
              <a href={p.url_repo} target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" class="text-gray-400 transition-all duration-150 icon icon-tabler icon-tabler-brand-github hover:text-white" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
              </svg>
              </a>
            </div>
            <p class="mb-2">{p.description}</p>
            <div class="flex gap-2 items-center">
              {p.tags.map((t => 
                <span class="text-white rounded-md border border-gray-800 bg-gray-900 text-xs px-2 py-1 font">{t}</span>
              ))}
            </div>
          </div>
        )
      })
    }
  </div>
</section>